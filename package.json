{
  "name": "instay_v0",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "author": "Brice Mvf <bricemacias@hotmail.com>",
  "scripts": {
    "start": "cd backend && node main.js",
    "server": "cd backend && nodemon main.js",
    "client": "cd client && yarn start",
    "dev": "concurrently --names \"server,client\" \"yarn run server --silent\" \"yarn run client --silent\"",
    "heroku-postbuild": "yarn install --prefix client && yarn run build --prefix client"
  },
  "engines": {
    "node": "12.4.0",
    "yarn": "1.15.2"
  },
  "workspaces": [
    "client",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^5.0.2"
  }
}
